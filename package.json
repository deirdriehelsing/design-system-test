{
  "name": "blueshift-ui",
  "version": "0.0.0",
  "homepage": "https://github.com/varsitytutors/blueshift-ui#readme",
  "engines": {
    "node": ">=18.13.0",
    "yarn": "~1.22"
  },
  "private": true,
  "workspaces": [
    "packages/analytics",
    "packages/auth",
    "packages/core",
    "packages/data-display",
    "packages/defense",
    "packages/feedback",
    "packages/fetch",
    "packages/form",
    "packages/i18n",
    "packages/inputs",
    "packages/navigation",
    "packages/nsp",
    "packages/search",
    "packages/surfaces",
    "packages/telemetry",
    "packages/testing-fixtures",
    "packages/testing-library",
    "packages/theme",
    "packages/tokens"
  ],
  "dependencies": {
    "@emotion/react": "11.14.0",
    "@emotion/styled": "11.14.1",
    "@mui/material": "6.4.1",
    "@phosphor-icons/react": "2.1.10",
    "lodash": "4.17.21"
  },
  "devDependencies": {
    "@babel/core": "7.28.3",
    "@babel/preset-env": "7.28.3",
    "@babel/preset-typescript": "7.27.1",
    "@chromatic-com/storybook": "^3.2.6",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@nx/react": "20.3.2",
    "@storybook/addon-a11y": "^8.6.12",
    "@storybook/addon-actions": "^8.6.12",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-links": "^8.6.12",
    "@storybook/addon-themes": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/manager-api": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/theming": "^8.6.12",
    "@swc/core": "1.13.4",
    "@swc/jest": "0.2.39",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/jest": "29.5.12",
    "@types/lodash": "4.17.20",
    "@types/node": "18.16.9",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "@vanilla-extract/css": "1.17.4",
    "@vanilla-extract/jest-transform": "1.1.17",
    "@vanilla-extract/vite-plugin": "3.8.0",
    "@vitejs/plugin-react": "^4.3.4",
    "babel-loader": "9.1.3",
    "concurrently": "9.2.0",
    "copyfiles": "2.4.1",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-storybook": "0.6.15",
    "eslint-plugin-testing-library": "^7.1.1",
    "eslint-plugin-unicorn": "51.0.1",
    "fetch-mock-jest": "1.5.1",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jotai": "2.13.1",
    "jotai-scope": "0.9.3",
    "knip": "^5.45.0",
    "lerna": "8.2.3",
    "lint-staged": "13.1.2",
    "nx": "20.3.2",
    "prettier": "3.6.2",
    "react": "19.1.1",
    "react-docgen-typescript": "2.4.0",
    "react-dom": "19.1.1",
    "storybook": "^8.6.12",
    "syncpack": "12.3.3",
    "typescript": "5.9.2",
    "vite": "4.3.9",
    "yalc": "1.0.0-pre.53"
  },
  "scripts": {
    "bootstrap": "lerna clean -y && yarn && yarn transpile",
    "build-storybook": "storybook build --output-dir ./docs/storybook",
    "bump": "lerna version --exact --no-private",
    "dev": "concurrently \"yarn storybook\" \"yarn watch\"",
    "dev-latest": "yarn bootstrap && yarn dev",
    "clean": "lerna run clean",
    "eslint": "eslint . --ext .js,.jsx,.ts,.tsx --color",
    "eslint-fix": "yarn eslint --fix",
    "jest": "node --expose-gc --no-compilation-cache ./node_modules/jest-cli/bin/jest.js --config=package.json --env=jsdom",
    "lint": "yarn eslint && yarn prettier",
    "lint-fix": "(yarn eslint-fix || true) && yarn prettier-fix",
    "prepare": "husky",
    "prettier": "prettier --check ./",
    "prettier-fix": "prettier --write ./",
    "setup": "yarn && yarn bootstrap",
    "storybook": "storybook dev -h www.vt.local -p 6006",
    "storybook:localhost": "PUBLIC_URL=https://localhost:6006 storybook dev -h localhost -p 6006",
    "test": "yarn typecheck && yarn lint && yarn jest --coverageThreshold='{\"global\":{\"statements\":85, \"functions\":80}}'",
    "test-ci": "yarn jest --clear-cache && yarn typecheck && yarn lint && yarn jest --coverage",
    "transpile": "lerna run transpile",
    "typecheck": "lerna exec -- tsc --noEmit",
    "yalc-push": "lerna run yalc-push",
    "yalc-watch": "lerna watch -- lerna run yalc-push --scope=\\$LERNA_PACKAGE_NAME",
    "watch": "lerna watch -- lerna run transpile-changes --scope=\\$LERNA_PACKAGE_NAME",
    "knip": "knip",
    "knip:fix": "knip --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:storybook/recommended",
      "prettier"
    ],
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      },
      {
        "files": [
          "**/?(*.)+(test).[jt]s?(x)"
        ],
        "extends": [
          "plugin:testing-library/react"
        ]
      }
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.eslint.json",
      "ecmaFeatures": {
        "jsx": true,
        "modules": true
      }
    },
    "plugins": [
      "@typescript-eslint",
      "import",
      "jsx-a11y",
      "react",
      "react-hooks",
      "testing-library",
      "unicorn"
    ],
    "rules": {
      "@typescript-eslint/consistent-type-imports": "error",
      "@typescript-eslint/consistent-type-exports": "error",
      "@typescript-eslint/array-type": [
        "error",
        {
          "default": "array",
          "readonly": "array"
        }
      ],
      "@typescript-eslint/member-ordering": [
        "error",
        {
          "default": {
            "order": "alphabetically"
          }
        }
      ],
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "args": "none",
          "ignoreRestSiblings": true,
          "vars": "all"
        }
      ],
      "@typescript-eslint/no-useless-constructor": "error",
      "complexity": [
        "error",
        12
      ],
      "curly": [
        "error",
        "all"
      ],
      "func-style": [
        "error",
        "declaration",
        {
          "allowArrowFunctions": true
        }
      ],
      "import/consistent-type-specifier-style": [
        "error",
        "prefer-top-level"
      ],
      "import/exports-last": "error",
      "import/first": "error",
      "import/group-exports": "error",
      "import/order": [
        "error",
        {
          "newlines-between": "always",
          "groups": [
            "type"
          ],
          "distinctGroup": false
        }
      ],
      "import/newline-after-import": "error",
      "import/no-anonymous-default-export": [
        "error",
        {
          "allowArray": false,
          "allowArrowFunction": false,
          "allowAnonymousClass": false,
          "allowAnonymousFunction": false,
          "allowCallExpression": true,
          "allowNew": false,
          "allowLiteral": false,
          "allowObject": false
        }
      ],
      "import/no-relative-packages": "error",
      "import/no-useless-path-segments": "error",
      "max-lines": [
        "error",
        {
          "max": 450,
          "skipBlankLines": true,
          "skipComments": true
        }
      ],
      "max-statements": [
        "error",
        50
      ],
      "new-cap": "off",
      "no-case-declarations": "warn",
      "no-console": "off",
      "no-debugger": "warn",
      "no-multiple-empty-lines": "error",
      "no-unused-expressions": "error",
      "no-prototype-builtins": "off",
      "no-underscore-dangle": "off",
      "no-use-before-define": "off",
      "no-useless-constructor": "off",
      "no-useless-return": "error",
      "one-var": [
        "error",
        {
          "var": "never",
          "let": "never",
          "const": "never"
        }
      ],
      "react/jsx-key": "error",
      "react/jsx-no-undef": "warn",
      "react/jsx-sort-props": [
        "error",
        {
          "ignoreCase": true
        }
      ],
      "react/jsx-uses-react": "warn",
      "react/jsx-uses-vars": "warn",
      "react/no-object-type-as-default-prop": "warn",
      "react/no-typos": "off",
      "react-hooks/exhaustive-deps": "warn",
      "react-hooks/rules-of-hooks": "error",
      "require-await": "error",
      "sort-imports": [
        "error",
        {
          "allowSeparatedGroups": true
        }
      ],
      "strict": "off",
      "testing-library/no-node-access": [
        "error",
        {
          "allowContainerFirstChild": true
        }
      ],
      "testing-library/no-debugging-utils": "error",
      "testing-library/prefer-explicit-assert": "error",
      "testing-library/prefer-user-event": "warn",
      "unicorn/prevent-abbreviations": [
        "warn",
        {
          "allowList": {
            "Arg": true,
            "arg": true,
            "Args": true,
            "args": true,
            "El": true,
            "el": true,
            "Err": true,
            "err": true,
            "Fn": true,
            "fn": true,
            "Obj": true,
            "obj": true,
            "Param": true,
            "param": true,
            "Params": true,
            "params": true,
            "Prev": true,
            "prev": true,
            "Prop": true,
            "prop": true,
            "Props": true,
            "props": true,
            "Ref": true,
            "ref": true
          }
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/**/*.@(t|j)s?(x)",
      "!**/*.css.ts",
      "!**/*.d.ts",
      "!**/*.stories.@(t|j)s?(x)",
      "!**/*.test.@(t|j)s?(x)",
      "!**/component-overrides/**",
      "!**/constants/**",
      "!**/node_modules/**",
      "!**/types/**",
      "!report-web-vitals.ts"
    ],
    "coverageDirectory": "docs/coverage",
    "coverageProvider": "v8",
    "coverageReporters": [
      "clover",
      "json",
      "lcov",
      [
        "text",
        {
          "skipFull": true
        }
      ]
    ],
    "globalSetup": "./lib/jest/setup/global.ts",
    "moduleDirectories": [
      "./node_modules",
      "./packages"
    ],
    "moduleNameMapper": {
      "\\.(aac|gif|eot|jpg|jpeg|m4a|mp3|mp4|oga|otf|png|svg|ttf|wav|webm|webp|woff|woff2)(\\?url)?$": "<rootDir>/lib/jest/mocks/file.js",
      "@phosphor-icons/react": "<rootDir>/lib/jest/mocks/phosphor-icons.js",
      "^helpers/(.*)$": "<rootDir>/lib/jest/helpers/$1",
      "mocks/(.*)$": "<rootDir>/lib/jest/mocks/$1",
      "swiper/css": "<rootDir>/lib/jest/mocks/style.js"
    },
    "roots": [
      "packages/"
    ],
    "setupFilesAfterEnv": [
      "./lib/jest/setup/after-env.ts"
    ],
    "testEnvironment": "jsdom",
    "testRegex": "(/src/.*|(\\.|/)).test\\.(j|t)sx?$",
    "transform": {
      ".*\\.css(\\..*)?$": "@vanilla-extract/jest-transform",
      "\\.(js|ts|tsx)$": [
        "@swc/jest",
        {
          "sourceMaps": true,
          "jsc": {
            "parser": {
              "syntax": "typescript",
              "tsx": true,
              "decorators": false,
              "dynamicImport": false
            },
            "transform": {
              "react": {
                "runtime": "automatic"
              }
            }
          }
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@blueshift-ui|@mui|dom7|react-player|ssr-window|swiper|uuid))"
    ],
    "workerIdleMemoryLimit": "1024"
  },
  "lint-staged": {
    "*.(t|j)s?(x)": [
      "prettier --write",
      "eslint --fix"
    ],
    "packages/**/*.@(t|j)s?(x)": [
      "jest --bail --collectCoverageFrom=collectCoverageFrom: [!**/*.d.ts, !**/*.stories.@(t|j)s?(x), !**/*.test.@(t|j)s?(x), !**/node_modules/**, !**/types/**] --config=package.json --env=jsdom --findRelatedTests --passWithNoTests"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5",
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "singleQuote": false
        }
      }
    ]
  }
}
